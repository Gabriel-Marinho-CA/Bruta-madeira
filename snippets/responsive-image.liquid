{% if desktop %}
  {% if mobile == blank %}
    {% assign mobile = desktop %}
  {% endif %}
  <picture>
    <source media="(min-width:767px)" srcset="{{ desktop |  image_url  }}">
    <source media="(max-width:766px)" srcset="{{ mobile | image_url }}">
    <img
      loading="{{ loading }}"
      style="{% if full %} width: 100% {% endif %}"
      src="{{ desktop | image_url }}"
      width="{{ width }}"
      height="{{ height }}"
      {% if desktop.alt != blank %}
        alt="{{ desktop.alt }}"
      {% else %}
        alt="Imagem"
      {% endif %}
    >
  </picture>
{% endif %}
