@media (max-width:767px) {
    #cart-template table.wrapper_items tbody .line-item td.price-item {
        grid-area: 3/2/3/3;
        width: auto;
        justify-content: center
    }
}

#cart-template table.wrapper_items tbody .line-item td.price-item .cart-item-price {
    display: flex;
    flex-direction: column;
    gap: .5rem
}

#cart-template table.wrapper_items tbody .line-item td.price-item .cart-item-price .list-price-minicart {
    text-decoration: line-through;
    color: #afafaf
}

#cart-template table.wrapper_items tbody .line-item td.price-item .cart-item-price .best-price-minicart {
    font-size: 20px;
    font-weight: 700
}

#cart-template table.wrapper_items tbody .line-item td.cart-remove-item {
    padding-right: 2rem
}

@media (max-width:767px) {
    #cart-template table.wrapper_items tbody .line-item td.cart-remove-item {
        width: fit-content;
        grid-area: 1/3/1/3;
        align-items: center
    }
}

#cart-template table.wrapper_items tbody .line-item td.cart-remove-item button {
    font-size: 16px;
    color: red;
    width: 100%;
}

#cart-template .cart-footer {
    margin-top: 6rem
}

#cart-template .cart-footer .wrapper-footer-cart {
    width: 100%;
    margin-left: auto;
    max-width: fit-content;
    background-color: #fff;
    padding: 3rem 2rem 2rem 2rem;
    border-radius: 4px
}

@media (max-width:767px) {
    #cart-template .cart-footer .wrapper-footer-cart {
        max-width: 100%
    }
}

#cart-template .cart-footer .wrapper-footer-cart .cart-totalizer {
    display: flex;
    padding-bottom: 2rem;
    justify-content: space-between;
    gap: 2rem
}

#cart-template .cart-footer .wrapper-footer-cart .cart-totalizer h3,
#cart-template .cart-footer .wrapper-footer-cart .cart-totalizer span {
    font-size: 20px
}

#cart-template .cart-footer .wrapper-footer-cart .cart-totalizer.total-price-minicar span {
    font-weight: 700
}

#cart-template .cart-footer .wrapper-footer-cart .cart-drawer-button {
    width: 100%;
    background-color: #52ae32;
    color: #fff;
    border-radius: 4px;
    padding: 1rem 0;
    font: normal normal 600 14px/16px var(--font-body)
}