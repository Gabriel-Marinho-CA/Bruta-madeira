#cart-template {
    padding: 6rem 0
}

@media (max-width:767px) {
    #cart-template {
        max-width: 400px
    }

    #cart-template .cart-page-form,
    #cart-template h1 {
        margin-inline: 1rem
    }
}

#cart-template .empty-cart-page {
    padding: 5rem 0
}

#cart-template .empty-cart-page a {
    background-color: #35735A;
    color: #fff;
    padding: 1rem 1.5rem;
    display: inline-block;
    border-radius: 4px;
    margin-top: 3rem
}

#cart-template table.wrapper_items {
    margin-top: 4rem;
    width: 100%;
    background: #fff;
    border-radius: 4px
}

@media (max-width:767px) {
    #cart-template table.wrapper_items {
        width: 100%;
        margin-inline: auto;
        padding: 1rem;
        display: block
    }
}

#cart-template table.wrapper_items thead {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #fff
}

@media (max-width:767px) {
    #cart-template table.wrapper_items thead {
        display: none
    }
}

#cart-template table.wrapper_items thead th {
    padding-bottom: 2.4rem
}

#cart-template table.wrapper_items thead th.title-1 {
    text-align: start;
    padding-left: 2rem;
    padding-top: 2rem
}

@media (max-width:767px) {
    #cart-template table.wrapper_items tbody {
        display: block
    }
}

#cart-template table.wrapper_items tbody .line-item {
    border-bottom: 1px solid #cecece
}

@media (max-width:767px) {
    #cart-template table.wrapper_items tbody .line-item {
        display: grid;
        grid-template-columns: repeat(3, auto);
        grid-template-rows: repeat(3, auto);
        padding-bottom: 3rem;
        padding-top: 2rem
    }
}

#cart-template table.wrapper_items tbody .line-item:last-child {
    border-bottom: none
}

#cart-template table.wrapper_items tbody .line-item td {
    vertical-align: middle;
    text-align: center;
    padding-top: 2rem;
    padding-bottom: 2rem
}

@media (max-width:767px) {
    #cart-template table.wrapper_items tbody .line-item td {
        display: flex;
        padding: 0
    }
}

#cart-template table.wrapper_items tbody .line-item td.image-item {
    text-align: start;
    width: 108px
}

@media (max-width:767px) {
    #cart-template table.wrapper_items tbody .line-item td.image-item {
        grid-area: 1/1/1/1
    }
}

#cart-template table.wrapper_items tbody .line-item td.url-item {
    text-align: start;
    padding-left: 1.5rem
}

@media (max-width:767px) {
    #cart-template table.wrapper_items tbody .line-item td.url-item {
        grid-area: 1/2/1/2;
        align-items: center
    }
}

#cart-template table.wrapper_items tbody .line-item td.url-item a {
    color: #000;
    font-size: 18px
}

@media (max-width:767px) {
    #cart-template table.wrapper_items tbody .line-item td.actions-btn-item {
        grid-area: 3/1/3/1;
        width: fit-content
    }
}

#cart-template table.wrapper_items tbody .line-item td.actions-btn-item .cart-quantity-selector {
    display: inline-flex;
    /* border: 1px solid #e7e7e7; */
    border-radius: 4px;
    margin-top: 10px
}

#cart-template table.wrapper_items tbody .line-item td.actions-btn-item .cart-quantity-selector button {
    width: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    user-select: none
}

