<style>
    {% comment %} #institucional h1 {
        color: #F68B1F;
        font-size: 32px;
        font-weight: 600;
    } {% endcomment %}
    #institucional h2,
    #institucional h3 {
      line-height: 25px;
      font-size: 16px;
        font-weight: 900;
        text-align: left;
        color: #303030;
        margin-top: 2rem;
        font-family: "area-bold";
    }
    #institucional .metafield-rich_text_field p {
        font-size: 16px;
        line-height: 25px;
        color: #303030;
        font-weight: 400;
        text-align: justify;      
    }
    #institucional .metafield-rich_text_field p a{
      color: #CE4D35;
      text-decoration: underline;       
  }
    #institucional .metafield-rich_text_field p em{
      margin-left: 15px;
      font-style: normal;    
  }
    .template-institucional {
      background-color: #F9F9F9;
    }
    #institucional .btn-wpp {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }
    #institucional .btn-wpp::before {
      content: "";
      background-image: url("data:image/svg+xml;base64,");
      display: block;
      height: 18px;
      width: 18px;
      background-repeat: no-repeat;
    }
  </style>

<section id="institucional">
  <div class="container mb-28">
      <div class="flex gap-5 py-4 mt-8 justify-around items-center md:overflow-x-auto md:overflow-y-hidden md:pb-2 md:justify-normal md:gap-4 md:px-2.5">
      {% for link in linklists.all-institucional.links %}
        {% assign titleActive = metaobject.titulo.value | default: '' %}
        <div class="flex flex-col items-center w-full max-w-[177px] md:min-w-20">
          <a href="{{ link.url }}" class="flex justify-center w-full flex-col items-center text-sm font-custom-black text-center  {% if link.title == titleActive %}font-black{% endif %}">
            <div class="shadow-[0_4px_16px_0px_#00000033] w-full h-20 rounded-lg flex items-center justify-center mb-2 {% if link.title == titleActive %}bg-[#E2DCD2]{% else %}bg-white{% endif %}">
                  {% capture iconFormatted %}icon-{{ link.handle }}.svg{% endcapture %}
                  <img
                    src="{{ iconFormatted | file_url  }}"
                    loading="lazy"
                    width="44"
                    height="44"
                  >
            </div>
           <span class="max-w-20"> {{ link.title }} </span>
          </a>
        </div>
      {% endfor %}
    </div>
    <div class="font-custom-black font-black text-2xl text-center mt-[100px]">
        <h1> {{ metaobject.titulo }}</h1>
    </div>

    <div class="max-w-[900px] mx-auto mt-6">
        {{ metaobject.texto | metafield_tag}}
    </div>


    {% if metaobject.titulo == 'Nossas Lojas' %}

      <div class="grid grid-cols-3 xl:grid-cols-2 md:grid-cols-1 gap-5 items-center">
        {% for store in section.blocks %}
          {% case store.type %}
            {% when 'store' %}

              <div class="border border-[#C8C9C9] rounded-[5px] shadow-[3px_3px_5px_0px_#00000040] max-w-[440px] bg-white">
                <div class="relative min-h-80 lg:min-h-full"> 
                  <img
                    src="{{ store.settings.image_store |  image_url }}"
                    alt="{{ store.settings.image_store.alt }}"
                    width="{{ store.settings.image_store.width }}"
                    height="{{ store.settings.image_store.height }}"
                    loading="lazy"
                  >
                    <div class="w-full bg-primary absolute bottom-0 py-1.5">
                      <p class="text-center text-sm text-white font-bold">{{store.settings.store_title }}</p>
                    </div>
                </div>

                <div class="p-4">
                  <div class="mb-4">
                    <p class="font-bold text-sm text-black">Endereço:</p>
                    <p class="text-[13px] text-[#4C4D4D]">{{store.settings.store_address }}</p>
                  </div>
                  <div class="mb-4">
                    <p class="font-bold text-sm text-black">Telefone:</p>
                    <p class="text-[13px] text-[#4C4D4D]">{{store.settings.store_phone }}</p>
                  </div>
                  <div>
                    <p class="font-bold text-sm text-black">Funcionamento:</p>
                    <p class="text-[13px] text-[#4C4D4D]">{{store.settings.store_time_1 }}</p>
                    <p class="text-[13px] text-[#4C4D4D]">{{store.settings.store_time_2 }}</p>
                  </div>
                    
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>


    {% endif %}
   
  </div>
</section> 

  
{% schema %}
{
  "name": "Institucional",
  "tag": "section",
  "settings": [
  ],
 "blocks": [
    {
      "type": "store",
      "name": "stores",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_store",
          "label": "Imagem da loja"
        },
        {
          "type": "text",
          "id": "store_title",
          "label": "Cidade da loja",
        },
        {
          "type": "text",
          "id": "store_address",
          "label": "Endereço da loja",
        },
        {
          "type": "text",
          "id": "store_phone",
          "label": "Telefone da loja",
        },
        {
          "type": "text",
          "id": "store_time_1",
          "label": "Horario de funcionamento - Dia de semana",
        },
        {
          "type": "text",
          "id": "store_time_2",
          "label": "Horario de funcionamento - Final de semana",
        },
      ]
    },
  ]
}
{% endschema %}
