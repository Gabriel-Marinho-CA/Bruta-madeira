      "type": "social",
      "name": "social_images",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_social",
          "label": "Imagem rede social"
        },
        {
          "type": "url",
          "id": "social_url",
          "label": "Url Rede Social"
        },
      ]
    },
  ]
}
{% endschema %}
